{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "rootDir": ".",
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@kanban/utils": ["packages/utils/dist"],
      "@kanban/dtos": ["packages/dtos/dist"],
      "@kanban/schemavalidations": ["packages/schemavalidations/dist"]
    }
  }
}
